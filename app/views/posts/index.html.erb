<h1>Posts Index</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Message</th>
    </tr>
  </thead>

<% @posts.each do |post| %>
  <tr>
    <td><%= User.find_by(id: post.user_id).name %></td>
    <td><%= post.content %></td>
  </tr>
<% end %>
</table>

<%= link_to "New Post", new_post_path %>
